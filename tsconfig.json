{
  "compilerOptions": {
    "target": "es2019",                          
    "module": "commonjs",                    
    "lib": ["es2019"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,       
    "moduleResolution": "node",  
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/app.ts"]
}